@model FitnessOnline.Models.ViewModel.MealPlanAppUserViewModel
@using FitnessOnline.Extensions

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create a Meal Plan</h2>
<br />

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MealPlan.ApplicationUserId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select id="dropdownUserlist" asp-for="MealPlan.ApplicationUserId" asp-items="Model.UserList.ToSelectListItem(Model.MealPlan.Id)" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MealPlan.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="MealPlan.Name" class="form-control" />
            </div>
            <span asp-validation-for="MealPlan.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MealPlan.Meal" class="col-form-label"></label>
            </div>
            <div class="col-lg-9">
                @Html.TextAreaFor(m => m.MealPlan.Meal)
            </div>
            <span asp-validation-for="MealPlan.Meal" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
<script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format',
            height: "550"
        });
</script>
    


    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}