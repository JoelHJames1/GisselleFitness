@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Manage Users</h2>
        </div>
        @*<div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>*@
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.ProfileImage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Email)
                    </th>

                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                         <img src="@Url.Action("UserPhotos", "ManageUser", new { id = item.Id } )" height="48" width="48" />
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Email)
                        </td>
                        <td>
                            <partial name="_TableButtonOptionalPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No subscription have been created!</p>
        }
    </div>
</div>